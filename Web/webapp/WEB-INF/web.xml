<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Payments System Web Application</display-name>
  <filter>
    <filter-name>RequestDispatcher</filter-name>
    <filter-class>by.it.academy.my.web.filter.RequestDispatcher</filter-class>
  </filter>
  <filter>
    <filter-name>DefaultCommand</filter-name>
    <filter-class>by.it.academy.my.web.filter.DefaultCommand</filter-class>
  </filter>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>by.it.academy.my.web.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RequestDispatcher</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DefaultCommand</filter-name>
    <servlet-name>FrontController</servlet-name>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <servlet-name>FrontController</servlet-name>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>by.it.academy.my.web.servlet.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/pages/*</url-pattern>
  </servlet-mapping>
</web-app>